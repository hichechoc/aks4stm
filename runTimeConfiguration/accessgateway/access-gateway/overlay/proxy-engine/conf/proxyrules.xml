<?xml version="1.0"?>
<?cocoon-process type="xslt"?>

<!DOCTYPE nete:proxyrules SYSTEM "file:////opt/CA/secure-proxy/proxy-engine/conf/dtd/proxyrules.dtd">
<nete:proxyrules xmlns:nete="https://sps.akslab.com/">

    <!-- Host principale -->
    <nete:cond type="host">
        <nete:case value="sps.akslab.com">

            <!-- Regole per i path -->
            <nete:cond type="uri" criteria="equals">
                <nete:case value="/protected/case1">
                    <nete:forward>https://www.broadcom.com/</nete:forward>
                </nete:case>

                <nete:default>
                    <nete:forward>https://www.inail.it/</nete:forward>
                </nete:default>
            </nete:cond>

        </nete:case>

        <!-- Default host fallback -->
        <nete:default>
            <nete:forward>https://www.google.com/</nete:forward>
        </nete:default>
    </nete:cond>

</nete:proxyrules>
